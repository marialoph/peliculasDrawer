<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeMain">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:titleTextColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.peliculas.PopupOverlay"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/homeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="ESTRENOS DE PELICULAS"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/wonka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Wonka"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/wonka1"
            android:layout_width="270dp"
            android:layout_height="197dp"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/wonka1"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/aquaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Aquaman II"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_editor_absoluteX="0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/aquaman1"
            android:layout_width="270dp"
            android:layout_height="197dp"
            android:layout_marginTop="320dp"
            app:srcCompat="@drawable/aquaman"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/juegos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:gravity="center"
        android:text="Los juegos del hambre"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_editor_absoluteX="0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/juegoH"
            android:layout_width="270dp"
            android:layout_height="197dp"
            android:layout_marginTop="510dp"
            app:srcCompat="@drawable/juegos"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>